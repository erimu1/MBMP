{
  "name": "mood-based-music-player",
  "version": "1.0.0",
  "description": "A mood-based music player that selects music based on your current mood",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "server": "nodemon server.js",
    "client": "cd client && npm start",
    "build": "cd client && npm run build",
    "install-client": "cd client && npm install",
    "deploy-frontend": "cd client && npm run deploy",
    "build-and-deploy": "npm run build && npm run deploy-frontend"
  },
  "keywords": ["music", "player", "mood", "react", "node"],
  "author": "Erim Uludag",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "axios": "^1.4.0",
    "dotenv": "^16.0.3"
  },
  "devDependencies": {
    "nodemon": "^2.0.22",
    "concurrently": "^8.0.1"
  }
}
